# =============================================================================
# MuBot Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values.
# Never commit .env to version control - it contains sensitive credentials.
# =============================================================================

# -----------------------------------------------------------------------------
# LLM Provider Configuration
# -----------------------------------------------------------------------------
# Choose your AI provider. Currently supported: openai, anthropic, kimi
LLM_PROVIDER=openai

# API key for your chosen provider
OPENAI_API_KEY=sk-your-openai-api-key-here
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
# KIMI_API_KEY=your-kimi-api-key-here

# Model selection - choose based on your needs:
# - gpt-4-turbo-preview: Best quality, higher cost
# - gpt-4: High quality, slower
# - gpt-3.5-turbo: Faster, cheaper, good for drafts
LLM_MODEL=gpt-4o

# Enable thinking mode for complex reasoning tasks (slower but more thorough)
LLM_THINKING_MODE=false

# -----------------------------------------------------------------------------
# Gmail API Configuration
# -----------------------------------------------------------------------------
# Path to your Google OAuth credentials file (downloaded from Google Cloud Console)
GMAIL_CREDENTIALS_PATH=./credentials/gmail_credentials.json

# Path where OAuth tokens will be stored (created automatically after first auth)
GMAIL_TOKEN_PATH=./credentials/gmail_token.json

# Your primary email address (used for sending and filtering)
SENDER_EMAIL=muskankh03@gmail.com

# Gmail label prefix for organizing outreach emails
OUTREACH_LABEL_PREFIX=outreach

# -----------------------------------------------------------------------------
# Vector Store Configuration (for RAG)
# -----------------------------------------------------------------------------
# Directory to store ChromaDB vector database files
CHROMA_DB_PATH=./data/vector_store

# Embedding model for semantic search
# - all-MiniLM-L6-v2: Fast, good quality (default)
# - all-mpnet-base-v2: Higher quality, slower
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Number of past emails to index for RAG
RAG_MAX_DOCUMENTS=200

# -----------------------------------------------------------------------------
# Memory and Data Configuration
# -----------------------------------------------------------------------------
# Base directory for all memory files
MEMORY_BASE_PATH=./data

# Maximum number of emails to send per day (safety limit)
MAX_DAILY_EMAILS=20

# Maximum number of follow-ups per thread
MAX_FOLLOWUPS=3

# Default follow-up delay in days
DEFAULT_FOLLOWUP_DELAY_DAYS=5

# -----------------------------------------------------------------------------
# Scheduling Configuration
# -----------------------------------------------------------------------------
# Heartbeat interval in minutes (how often to check for follow-ups, replies)
HEARTBEAT_INTERVAL_MINUTES=60

# Timezone for scheduling (uses system timezone if not set)
# SCHEDULER_TIMEZONE=America/New_York

# -----------------------------------------------------------------------------
# Safety and Ethics Configuration
# -----------------------------------------------------------------------------
# Require explicit approval before sending any email
REQUIRE_SEND_APPROVAL=true

# Enable rate limiting (prevents sending emails too quickly)
RATE_LIMITING_ENABLED=true

# Minimum interval between emails in seconds
MIN_EMAIL_INTERVAL_SECONDS=300

# -----------------------------------------------------------------------------
# Notion Integration (Optional)
# -----------------------------------------------------------------------------
# Notion API token for job pipeline tracking
# NOTION_API_TOKEN=secret_your_notion_token

# Notion database ID for job applications
# NOTION_DATABASE_ID=your-database-id

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Enable structured JSON logging (useful for production)
JSON_LOGGING=false
